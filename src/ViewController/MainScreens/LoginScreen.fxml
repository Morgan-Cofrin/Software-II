<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="lblHeaderLabel" layoutX="100.0" layoutY="14.0" prefHeight="50.0" prefWidth="200.0" text="Welcome">
        <font>
          <Font name="SansSerif Bold" size="22.0" />
        </font>
    </Label>
    <TextField fx:id="txtFieldUsername" layoutX="100.0" layoutY="70.0" prefHeight="50.0" prefWidth="200.0" promptText="Username" />
    <PasswordField fx:id="txtFieldUserPassword" layoutX="100.0" layoutY="140.0" prefHeight="50.0" prefWidth="200.0" promptText="Password" />
    <Button fx:id="btnUserLogin" layoutX="100.0" layoutY="210.0" mnemonicParsing="false" onMouseClicked="#authenticateUser" prefHeight="50.0" prefWidth="200.0" text="Login" textAlignment="CENTER">
        <font>
          <Font size="14.0" />
        </font>
    </Button>
   <Button fx:id="btnSkipLogin" layoutX="14.0" layoutY="45.0" mnemonicParsing="false" onMouseClicked="#skipAuthentication" text="Skip" />
   <padding>
      <Insets top="10.0" />
   </padding>
</AnchorPane>
